generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id    Int    @id @default(autoincrement()) // chave prim√°ria com auto incremento
  price Decimal @db.Decimal(10,2)
  description String
  category String
  type String
  createdAt   DateTime  @default(now())
}